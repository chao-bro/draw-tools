<?xml version="1.0" encoding="utf-8"?>
<merge
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.tools.protractor.ProtractorTransformer
        android:id="@+id/rulerset_protractor_transformer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.tools.protractor.ProtractorView
            android:id="@+id/rulerset_protractor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/rulerset_protractor_close"
            android:background="@drawable/rulerset_close_btn"
            android:layout_alignParentBottom="true"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <View
            android:id="@+id/rulerset_protractor_v_rotate"
            android:background="@drawable/rulerset_rotate_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/rulerset_protractor_degree"
            android:textColor="@color/black"
            android:background="@drawable/rulerset_bg_round_rect"
            android:text="0°"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/rulerset_protractor_len1"
            android:textColor="@color/white"
            android:text="0°"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="60dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/rulerset_protractor_len2"
            android:textColor="@color/white"
            android:text="0°"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="60dp"
            android:layout_height="30dp"/>

        <LinearLayout
            android:id="@+id/rulerset_protractor_ll_options"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/rulerset_protractor_iv_degree"
                android:src="@drawable/rulerset_protractor_degree"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/rulerset_protractor_iv_radians"
                android:src="@drawable/rulerset_protractor_radians"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/rulerset_protractor_iv_triangle"
                android:src="@drawable/rulerset_protractor_triangle"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/rulerset_protractor_iv_sector"
                android:src="@drawable/rulerset_protractor_sector"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/rulerset_protractor_iv_circle"
                android:src="@drawable/rulerset_protractor_circle"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/rulerset_protractor_iv_circle_filled"
                android:src="@drawable/rulerset_protractor_circle_filled"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </com.example.tools.protractor.ProtractorTransformer>
    <View
        android:id="@+id/rulerset_protractor_circle1"
        android:background="@drawable/rulerset_protractor_ic_protractor_circle1"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <View
        android:id="@+id/rulerset_protractor_circle2"
        android:background="@drawable/rulerset_protractor_ic_protractor_circle2"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</merge>