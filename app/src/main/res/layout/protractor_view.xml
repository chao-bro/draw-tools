<?xml version="1.0" encoding="utf-8"?>
<merge
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.tools.protractor.ProtractorTransformer
        android:id="@+id/transformer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.tools.protractor.ProtractorView
            android:id="@+id/protractor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/close"
            android:background="@drawable/close_btn"
            android:layout_alignParentBottom="true"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <View
            android:id="@+id/v_rotate"
            android:background="@drawable/rotate_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/degree"
            android:textColor="@color/black"
            android:background="@color/white"
            android:text="0°"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/len1"
            android:textColor="@color/white"
            android:text="0°"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="60dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/len2"
            android:textColor="@color/white"
            android:text="0°"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="60dp"
            android:layout_height="30dp"/>

        <LinearLayout
            android:id="@+id/ll_options"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_degree"
                android:src="@drawable/degree"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/iv_radians"
                android:src="@drawable/radians"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/iv_triangle"
                android:src="@drawable/triangle"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/iv_sector"
                android:src="@drawable/sector"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/iv_circle"
                android:src="@drawable/circle"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/iv_circle_filled"
                android:src="@drawable/circle_filled"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </com.example.tools.protractor.ProtractorTransformer>
    <View
        android:id="@+id/circle1"
        android:background="@drawable/circle1"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <View
        android:id="@+id/circle2"
        android:background="@drawable/circle2"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</merge>